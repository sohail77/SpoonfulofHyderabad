<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fog="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sohail.spoonfulofhyderabad.Activities.CouponActivity">




   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="500dp"
       app:cardElevation="2dp"
       android:backgroundTint="#536DFE"
       >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coupon Code"
            android:fontFamily="@font/carme"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="5dp"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/coupon_txt"
               android:textStyle="bold"
               android:fontFamily="@font/carme"
               android:gravity="center"
               android:textColor="@android:color/white"
               android:textSize="32sp"
               android:visibility="visible"
               />

           <com.airbnb.lottie.LottieAnimationView
               android:id="@+id/animation_view_coupon"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:lottie_fileName="newAnimation.json"
               android:visibility="gone"
               android:layout_gravity="center"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Congratulations!"
               android:gravity="center"
               android:textColor="@android:color/white"
               android:textSize="18sp"
               android:visibility="gone"
               android:id="@+id/congo_txt"/>

       </LinearLayout>




   </android.support.v7.widget.CardView>

    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/slide_coupon"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        app:area_margin="4dp"
        app:outer_color="#536DFE"
        app:inner_color="@android:color/white"
        app:text="Slide to unlock Coupon"
        app:text_size="12sp"
        app:slider_height="60dp"
        app:slider_locked="false" />


</LinearLayout>
