<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fog="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sohail.spoonfulofhyderabad.CouponActivity">




   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="400dp"
       app:cardElevation="5dp"
       app:cardBackgroundColor="#ec8c69">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="Scratch below to view the coupon"
           android:textStyle="bold"
           android:gravity="center"
           android:textSize="25sp"
           />

   </android.support.v7.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/coupon_frame">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="HHFAAQ"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="75sp"
        />


    <com.dynamitechetan.fogviewlibrary.FogView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fog"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        fog:fog_image="@drawable/fog_dense"
        fog:stroke_width="100" />
    </FrameLayout>


</LinearLayout>
